<div class="container">
 <div class="row">
  <div class="col-md-10">
<table class = "table table-hover">
<h5>会員一覧</h5>
 <thead>
  <tr>
    <th>会員ID</th>
    <th></th>
    <th>氏名</th>
    <th></th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </tr>
 </thead>
<tbody>
  <% @customers.each do |customer| %>
   <tr>
     <td><%= customer.id %></td>
     <td></td>
     <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
     <td></td>
     <td><%= customer.email %></td>
     <td>
      <% if customer.is_active %>
       有効
      <% else %>
       退会
      <% end %>
     </td>
   </tr>
  <% end %>
</tbody>
</table>
<%= paginate @customers %>