
<h4>配送先登録/一覧</h4>
<%= form_with model: @address, url:addresses_path do |f| %>
<h5>郵便番号</h5>
  <%= f.text_field :postal_code, class: "form-group" %>
<h5>住所</h5>
  <%= f.text_field :address, cols: 100, size: "50x", class: "form-group" %>
<h5>宛名</h5>
  <%= f.text_field :name, class: "form-group" %>
  <%= f.submit "新規登録", class:"button" do %>
  <% end %>
<% end %>
<table class="table">
<thead>
  <tr>
    <th>郵便番号</th>
    <th>住所</th>
    <th>宛名</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @addresses.each do |address| %>
  <tr>
    <td><%= address.postal_code %></td>
    <td><%= address.address %></td>
    <td><%= address.name %></td>
    <td><%= link_to "編集する", edit_address_path(address.id) %></td>
    <td><%= link_to "削除する", address_path(address.id), method: :delete %></td>
  </tr>
<% end %>
</tbody>
</table>