<div class="container">
 <div class="row">
  <div class="col-md-4 offset-md-1">
<table>
<h4>商品一覧</h4>
 <tbody>
  <% @items.each do |item| %>
   <tr>
    <td><%=link_to item_path(item.id) do %>
        <%= image_tag item.get_image(100,100) %>
    <% end %>
    </td>
    <td><%=link_to item_path(item.id) do %>
     <%= item.name %>
     <% end %>
    </td>
    <td><%= item.price %></td>
   </tr>
  <% end %>
 </tbody>
</table>
<%= paginate @items %>
  </div>
 </div>
</div>