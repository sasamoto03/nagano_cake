<h4>注文情報確認</h4>
<table>
  <th>商品名</th>
  <th>単価(税込)</th>
  <th>数量</th>
  <th>小計</th>
  </tr>
   <% total = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= image_tag cart_item.item.get_image(100,100) %>
            <%= cart_item.item.name %>
          </td>
          <td><%= (cart_item.item.price*1.10).to_i %></td>
          <td><%= cart_item.amount %></td>
          <td>
             <% subtotal = ((cart_item.item.price*cart_item.amount)*1.10).to_i %>
             <%= subtotal %>
           </td>
         </tr>
         <% total += (cart_item.item.price*cart_item.amount)*1.10 %>
     <% end %>
</table>

<table>
     <tr>
       <th>送料</th>
        <% @order.postage = 800 %>
       <td><%= @order.postage %></td>
      </tr>
     <tr>
       <th>商品合計</th>
       <td><%= total.to_i %></td>
      </tr>
      <tr>
        <th>請求金額</th>
        <% @order.total_amount = @order.postage + total.to_i %>
        <td><%= @order.total_amount %></td>
      </tr>
</table>
<tr>
  <th>支払い方法</th>
  <td><%= @order.payment_method_i18n %></td>
 </tr>
 <tr>
   <th>お届け先</th>
   <td>
    〒<%= @order.postal_code %>
    <%= @order.address %>
    <%= @order.name %>
   </td><br><br>
   <%= form_with model: @order, url: orders_path do |f| %>
   <%= f.hidden_field  :postal_code,  value: @order.postal_code %>
   <%= f.hidden_field  :address,  value: @order.address %>
   <%= f.hidden_field  :name,  value: @order.name %>
   <%= f.hidden_field  :payment_method,  value: @order.payment_method %>
   <%= f.hidden_field  :total_amount,  value: @order.total_amount %>
   <%= f.hidden_field  :postage,  value: @order.postage %>
   <%= f.submit '注文を確定する' %>
   <% end %>
  </tr>
