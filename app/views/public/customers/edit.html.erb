<h4>会員情報編集</h4>

<%= form_with model: @customer, url: customers_information_path do |f| %>
<h5>氏名</h5>
  <%= f.text_field :last_name, class: "form-group" %>
  <%= f.text_field :first_name, class: "form-group" %>
<h5>フリガナ</h5>
  <%= f.text_field :last_name_kana, class: "form-group" %>
  <%= f.text_field :first_name_kana, class: "form-group" %>
<h5>郵便番号</h5>
  <%= f.text_field :postal_code, class: "form-group" %>
<h5>住所</h5>
  <%= f.text_field :address, cols: 100, size: "50x", class: "form-group" %>
<h5>電話番号</h5>
  <%= f.text_field :telephone_number, class: "form-group" %>
<h5>メールアドレス</h5>
  <%= f.text_field :email, class: "form-group" %>
  <%= f.submit "編集内容を保存" %>
  <% end %>
  <%= link_to "退会する", customers_unsubscribe_path %>